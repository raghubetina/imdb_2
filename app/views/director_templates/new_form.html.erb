<!-- Validation failure messages -->
<% if @director.present? %>
  <% if @director.errors.any? %>
    <% @director.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new director
</h1>


<hr>

<!-- Form director start -->
<form action="/create_director" method="post">
<!-- Form director end -->

  <!-- Hidden input for authenticity token to protect from forgery -->
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @director.try(:name) %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for bio start -->
  <div class="form-group">
    <label for="bio">
      Bio
    </label>

    <!-- Input for bio start -->
    <input type="text" id="bio" name="bio" class="form-control" value="<%= @director.try(:bio) %>">
    <!-- Input for bio end -->
  </div>
  <!-- Label and input for bio end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <!-- Input for image start -->
    <input type="text" id="image" name="image" class="form-control" value="<%= @director.try(:image) %>">
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <button class="btn btn-block btn-outline-secondary">
    Create director
  </button>
</form>

<hr>

<a href="/directors">
  Go back
</a>
