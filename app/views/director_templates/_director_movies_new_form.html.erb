<li class="list-group-item">
  <!-- Form movie start -->
  <form action="/create_movie" method="post">
  <!-- Form movie end -->

    <!-- Label and input for title start -->
    <div class="form-group">
      <label for="title">
        Title
      </label>

      <!-- Input for title start -->
      <input type="text" id="title" name="title" class="form-control" value="<%= @movie.try(:title) %>">
      <!-- Input for title end -->
    </div>
    <!-- Label and input for title end -->

    <!-- Label and input for year start -->
    <div class="form-group">
      <label for="year">
        Year
      </label>

      <!-- Input for year start -->
      <input type="text" id="year" name="year" class="form-control" value="<%= @movie.try(:year) %>">
      <!-- Input for year end -->
    </div>
    <!-- Label and input for year end -->

    <!-- Label and input for director_id start -->
    <div class="form-group">
      <label for="director_id">
        Director
      </label>

      <!-- Input for director_id start -->
      <input type="text" id="director_id" name="director_id" class="form-control" value="<%= @movie.try(:director_id) %>">
      <!-- Input for director_id end -->
    </div>
    <!-- Label and input for director_id end -->

    <!-- Label and input for image start -->
    <div class="form-group">
      <label for="image">
        Image
      </label>

      <!-- Input for image start -->
      <input type="text" id="image" name="image" class="form-control" value="<%= @movie.try(:image) %>">
      <!-- Input for image end -->
    </div>
    <!-- Label and input for image end -->

    <button class="btn btn-block btn-outline-secondary">
      Create movie
    </button>
  </form>
</li>
