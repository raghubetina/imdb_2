<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Movie
    </th>

    <th>
      Actor
    </th>

    <th>
      Character name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @castings.each do |casting| %>
  <tr>
    <!-- Display casting.id start -->
    <td>
      <%= casting.id %>
    </td>
    <!-- Display casting.id end -->

    <!-- Display casting.movie.title start -->
    <td>
      <%= casting.movie.title %>
    </td>
    <!-- Display casting.movie.title end -->

    <!-- Display casting.actor.name start -->
    <td>
      <%= casting.actor.name %>
    </td>
    <!-- Display casting.actor.name end -->

    <!-- Display casting.character_name start -->
    <td>
      <%= casting.character_name %>
    </td>
    <!-- Display casting.character_name end -->

    <!-- Display casting.created_at start -->
    <td>
      <%= time_ago_in_words(casting.created_at) %> ago
    </td>
    <!-- Display casting.created_at end -->

    <!-- Display casting.updated_at start -->
    <td>
      <%= time_ago_in_words(casting.updated_at) %> ago
    </td>
    <!-- Display casting.updated_at end -->

    <td>
      <a href="/castings/<%= casting.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
    <%= paginate @castings, theme: 'twitter-bootstrap-4' %>
