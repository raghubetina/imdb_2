<h1>
  Friend request #<%= @friend_request.id %> details
</h1>
<!-- Edit link friend_request start -->
<% if current_user == @friend_request.sender %>
  <a href="/friend_requests/<%= @friend_request.id %>/edit">
    Edit friend_request
  </a>
<% end %>
<!-- Edit link friend_request end -->
<hr>

<dl>
  <dt>
    Sender
  </dt>
  <dd>
    <% if @friend_request.sender.present? %>
      <a href="/users/<%= @friend_request.sender_id %>">
        <%= @friend_request.sender.email %>
      </a>
    <% end %>
  </dd>

  <dt>
    Recipient
  </dt>
  <dd>
    <% if @friend_request.recipient.present? %>
      <a href="/users/<%= @friend_request.recipient_id %>">
        <%= @friend_request.recipient.email %>
      </a>
    <% end %>
  </dd>

  <dt>
    Created at
  </dt>
  <!-- Display created_at start -->
  <dd>
    <%= time_ago_in_words(@friend_request.created_at) %> ago
  </dd>
  <!-- Display created_at end -->

  <dt>
    Updated at
  </dt>
  <!-- Display updated_at start -->
  <dd>
    <%= time_ago_in_words(@friend_request.updated_at) %> ago
  </dd>
  <!-- Display updated_at end -->
</dl>

<!-- Delete link friend_request start -->
<% if current_user == @friend_request.sender %>
  <a href="/delete_friend_request/<%= @friend_request.id %>">
    Delete friend_request
  </a>
<% end %>
<!-- Delete link friend_request end -->

<hr>

<a href="/friend_requests">
  Go back
</a>


