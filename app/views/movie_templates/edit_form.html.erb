<!-- Validation failure messages -->
<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit movie #<%= @movie.id %>
</h1>

<hr>

<!-- Form movie start -->
<form action="/update_movie/<%= @movie.id %>" method="post">
<!-- Form movie end -->

  <!-- Hidden input for authenticity token to protect from forgery -->
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @movie.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for year start -->
  <div class="form-group">
    <label for="year">
      Year
    </label>

    <!-- Input for year start -->
    <input type="text" id="year" name="year" class="form-control" value="<%= @movie.year %>">
    <!-- Input for year end -->
  </div>
  <!-- Label and input for year end -->

  <!-- Label and input for director_id start -->
  <div class="form-group">
    <label for="director_id">
      Director
    </label>

    <%= select_tag(:director_id, options_from_collection_for_select(Director.all, :id, :name, @movie.director_id), :class => "form-control") %>
  </div>
  <!-- Label and input for director_id end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <!-- Input for image start -->
    <input type="text" id="image" name="image" class="form-control" value="<%= @movie.image %>">
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <button class="btn btn-block btn-outline-secondary">
    Update movie
  </button>
</form>

<hr>

<a href="/movies">
  Go back
</a>
