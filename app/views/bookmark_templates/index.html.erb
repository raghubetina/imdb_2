<h1>
  All bookmarks
</h1>

<a href="/bookmarks/new">
  Add a new bookmark
</a>

<div class="row">
  <div class="col-md-12">
    <%= render partial: "bookmark_templates/search_form" %>
  </div>
</div>

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Movie
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @bookmarks.each do |bookmark| %>
  <tr>
    <!-- Display bookmark.id start -->
    <td>
      <%= bookmark.id %>
    </td>
    <!-- Display bookmark.id end -->

    <td>
      <% if bookmark.user.present? %>
        <a href="/users/<%= bookmark.user.id %>">
          <%= bookmark.user.email %>
        </a>
      <% end %>
    </td>

    <td>
      <% if bookmark.movie.present? %>
        <a href="/movies/<%= bookmark.movie.id %>">
          <%= bookmark.movie.title %>
        </a>
      <% end %>
    </td>

    <!-- Display bookmark.created_at start -->
    <td>
      <%= time_ago_in_words(bookmark.created_at) %> ago
    </td>
    <!-- Display bookmark.created_at end -->

    <!-- Display bookmark.updated_at start -->
    <td>
      <%= time_ago_in_words(bookmark.updated_at) %> ago
    </td>
    <!-- Display bookmark.updated_at end -->

    <td>
      <a href="/bookmarks/<%= bookmark.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
    <%= paginate @bookmarks, theme: 'twitter-bootstrap-4' %>
