<h1>
  All bookmarks
</h1>

<a href="/bookmarks/new">
  Add a new bookmark
</a>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Movie
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @bookmarks.each do |bookmark| %>
  <tr>
    <!-- Display bookmark.id start -->
    <td>
      <%= bookmark.id %>
    </td>
    <!-- Display bookmark.id end -->

    <!-- Display bookmark.user.email start -->
    <td>
      <%= bookmark.user.email %>
    </td>
    <!-- Display bookmark.user.email end -->

    <!-- Display bookmark.movie_id start -->
    <td>
      <%= bookmark.movie_id %>
    </td>
    <!-- Display bookmark.movie_id end -->

    <!-- Display bookmark.created_at start -->
    <td>
      <%= time_ago_in_words(bookmark.created_at) %> ago
    </td>
    <!-- Display bookmark.created_at end -->

    <!-- Display bookmark.updated_at start -->
    <td>
      <%= time_ago_in_words(bookmark.updated_at) %> ago
    </td>
    <!-- Display bookmark.updated_at end -->

    <td>
      <a href="/bookmarks/<%= bookmark.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
