<h1>
  All actors
</h1>

<a href="/actors/new">
  Add a new actor
</a>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Bio
    </th>

    <th>
      Image
    </th>

    <th>
      Dob
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @actors.each do |actor| %>
  <tr>
    <!-- Display actor.id start -->
    <td>
      <%= actor.id %>
    </td>
    <!-- Display actor.id end -->

    <!-- Display actor.name start -->
    <td>
      <%= actor.name %>
    </td>
    <!-- Display actor.name end -->

    <!-- Display actor.bio start -->
    <td>
      <%= actor.bio %>
    </td>
    <!-- Display actor.bio end -->

    <!-- Display actor.image start -->
    <td>
      <img src='<%= actor.image %>' class='img-responsive'>
    </td>
    <!-- Display actor.image end -->

    <!-- Display actor.dob start -->
    <td>
      <%= actor.dob %>
    </td>
    <!-- Display actor.dob end -->

    <!-- Display actor.created_at start -->
    <td>
      <%= time_ago_in_words(actor.created_at) %> ago
    </td>
    <!-- Display actor.created_at end -->

    <!-- Display actor.updated_at start -->
    <td>
      <%= time_ago_in_words(actor.updated_at) %> ago
    </td>
    <!-- Display actor.updated_at end -->

    <td>
      <a href="/actors/<%= actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
    <%= paginate @actors, theme: 'twitter-bootstrap-4' %>
